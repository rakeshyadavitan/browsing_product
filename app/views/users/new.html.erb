<!DOCTYPE html>
<html>
	<head>
		<style>
			input{
		    width: 100%;
		    padding: 12px 20px;
		    margin: 8px 0;
		    display: inline-block;
		    border: 1px solid #ccc;
		    box-sizing: border-box;
			}

			button {
		    background-color: #4CAF50;
		    color: white;
		    padding: 14px 20px;
		    margin: 8px 0;
		    border: none;
		    cursor: pointer;
		    width: 100%;
			}

			button:hover {
			  opacity: 0.8;
			}

			.container {
			  padding-top: 100px;
			  padding-left: 500px;
			  padding-right: 500px;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<%= form_for(:user, url: {controller: 'users', action: 'create'}) do |f| %>
		    Username: <%= f.text_field :username%><br><br>
		    Email: <%= f.text_field :email%><br><br>
		    Password: <%= f.password_field :password%><br><br>
		    Password Confirmation: <%= f.password_field :password_confirmation%><br><br>
		    <%= f.submit :Signup %>
		  <% end %>
		  <button><%= link_to "LogIn", login_url%></button>
		  <% if @user.errors.any? %>
		    <ul class="Signup_Errors">
		    <% for message_error in @user.errors.full_messages %>
		      <li>* <%= message_error %></li>
		    <% end %>
		    </ul>
		  <% end %>
		</div>
	</body>
</html>